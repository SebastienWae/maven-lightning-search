{
  "name": "maven-lightning-search",
  "private": true,
  "type": "module",
  "workspaces": [
    "src/*"
  ],
  "scripts": {
    "lint": "biome lint",
    "lint:fix": "biome lint --fix",
    "format": "biome format",
    "format:fix": "biome format --write",
    "check": "biome check",
    "check:fix": "biome check --fix",
    "type-check": "tsc --noEmit",
    "scrape": "bun run --env-file .env --elide-lines=0 --filter @maven-lightning-search/data scrape",
    "dev": "bun --bun run --env-file .env --elide-lines=0 --filter @maven-lightning-search/web dev"
  },
  "catalog": {
    "zod": "^4.2.1",
    "drizzle-orm": "^0.45.1",
    "tslog": "^4.10.2"
  },
  "dependencies": {
    "zod": "catalog:"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.10",
    "@types/bun": "^1.3.5",
    "better-sqlite3": "^12.5.0",
    "drizzle-kit": "^0.31.8"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}
